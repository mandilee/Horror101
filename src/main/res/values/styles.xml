<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#666666</item>
        <item name="colorPrimaryDark">#222222</item>
        <item name="colorAccent">#cc0000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="WHeightMWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WHeightMWidth.Base">
        <item name="android:paddingBottom">30dp</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
    </style>

    <style name="WHeightMWidth.Title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#cc0000</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="WHeightMWidth.Title.Sub">
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#000000</item>
    </style>

    <style name="WHeightMWidth.QNumber">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:drawableRight">@android:drawable/checkbox_off_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WHeightMWidth.QuestionLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WHeightMWidth.Question">
        <item name="android:textColor">#333333</item>
    </style>

    <style name="WHeightMWidth.Hint">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="WHeightMWidth.Answer">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WHeightMWidth.Answer.RadioButton">
        <item name="android:saveEnabled">false</item>
    </style>

    <style name="image">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
